   <!-- ##### Breadcrumb Area Start ##### -->
    <section class="breadcrumb-area bg-img bg-overlay" style="background-image: url(/poster/deals/5e0e041f7891b6216cc667ad.jpg);">
        <div class="container h-100">
            <div class="row h-100 align-items-center">
                <!-- Breadcrumb Text -->
                <div class="col-12">
                    <div class="breadcrumb-text">
                        <h2>{{title}}</h2>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- ##### Breadcrumb Area End ##### -->

    <!-- ##### Articles Area Start ##### -->
    <section class="articles-area section-padding-0-100">
        <div class="container">
            <div class="row justify-content-center">
                <!-- Articles Post Area -->
                <div class="col-12 col-lg-8">
                    <div class="mt-100">
                        {{#each deals}}
                        <!-- *** Single Articles Area *** -->
                        <div class="single-articles-area d-flex flex-wrap mb-30">
                            <div class="article-thumbnail">
                                <img src="/poster/deals/{{id}}.jpg" alt=""/>
                            </div>
                            <div class="article-content">
                                <a href="#" class="post-title">{{name}}</a>
                                <div class="post-meta">
                                    <a href="#" class="post-date">Đến {{date}}</a>
                                    <a href="#" class="post-comments">-{{discount}} Đ</a>
                                    
                                </div>
                                <p>{{condition}}</p>
                                <p>{{description}}</p>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                </div>
                <!-- Sidebar Area -->
                <div class="col-6 col-sm-6 col-md-2 col-lg-1">
                </div>
            </div>
        </div>
    </section>
    <!-- ##### Articles Area End ##### -->

