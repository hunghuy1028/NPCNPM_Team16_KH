
    <!-- ##### Breadcrumb Area Start ##### -->
    <section class="breadcrumb-area bg-img bg-overlay" style="background-image: url(/poster/movie/{{movie.id}}.jpg);">
        <div class="container h-100">
            <div class="row h-100 align-items-center">
                <!-- Breadcrumb Text -->
                <div class="col-12">
                    <div class="breadcrumb-text">
                        <h2>{{movie.Name}}</h2>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- ##### Breadcrumb Area End ##### -->

    <!-- ##### Post Details Area Start ##### -->
    <section class="post-news-area section-padding-0-100">
        <div class="container">
            <div class="row justify-content-center">
                <!-- Post Details Content Area -->
                <div class="col-12 col-lg-8">
                    <div class="mt-100">
                        <div class="post-details-content mb-100">
                            <div class="blog-thumbnail mb-50">
                                <iframe width="735" height="400" src="{{movie.Trailer}}" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                                </iframe>       
                                
                            </div>
                            <div class="blog-content">
                                <div class="row">
                                    <div class="col-3">
                                        <img src="{{movie.Poster}}" alt="">
                                    </div>
                                    <div class="col-9">
                                        <h4 class="post-title">Tên bộ phim: {{movie.Name}}</h4>
                                        <div class="post-meta mb-30">
                                            <div>Năm sản xuất: {{movie.Year}}</div>
                                            <div>Thể loại: {{movie.Category}}</div>
                                            <div> Đạo diễn: {{movie.Director}}</div>
                                            <div>Nội dung:</div>
                                            <p>{{movie.Description}}</p>
                                        </div>
                                    </div>
                                </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- ##### Post Details Area End ##### -->
